                                                        <!--<td> <span t-field="g.min_per"/>-<span t-field="g.max_per"/>%</td>-->
                                                        <!--<td> <span t-field="g.score"/></td>-->
                                                    <!--</tr>-->
                                                <!--</t>-->

                                        <!--</table>-->
                                    <!--</div>-->

                                </div>

